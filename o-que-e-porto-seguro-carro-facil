<script type="text/javascript">
	var setSurvey = 0;
	$( window ).scroll(function() {
		var scrolled = $("body").scrollTop();
		//console.log(scrolled);
		if(scrolled > 50 && setSurvey == 0){
			setSurvey = 1;
		}
		if(scrolled < 50 && setSurvey == 1){
			openModalBox("Modal", "/ajax/survey", 1, "Big");
			setSurvey = 0;
		}
	});
</script>

